package ufront.mail;

/**
A set of email constants used in various emails or mailers.
**/
class EmailConstants {
	/** charset constant for koi8-r */
	static inline public var KOI8_R = "koi8-r";

	/** charset constant for iso-8859-1 */
	static inline public var ISO_8859_1 = "iso-8859-1";

	/** charset constant for us-ascii */
	static inline public var US_ASCII = "us-ascii";

	/** charset constant for utf-8 */
	static inline public var UTF_8 = "utf-8";

	/** defines the text/html content type */
	static inline public var TEXT_HTML = "text/html";

	/** defines the text/plain content type */
	static inline public var TEXT_PLAIN = "text/plain";
}
